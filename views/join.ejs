<div class="row">
    <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5 data-setup-card">
            <div class="card-img-left d-none d-md-flex">
                <!-- Background image for card set in CSS! -->
            </div>
            <div class="card-body">
                <%- include('./partials/messages.ejs'); %>
                <% if (!haveCode) { %>
                <h5 class="card-title text-center">Join an exchange</h5>
                <form class="form-signin" method="post" action="/code">
                    <div class="form-label-group">
                        <input type="text" name="code" id="code" class="form-control" placeholder="Invitation code" required autofocus>
                        <label for="code">Please put in the invitation code</label>
                    </div>

                    <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Submit</button>
                </form>
                <% } else { %>

                <div class="card">
                    <div class="card-header">
                        This exchange was created by <%= author %>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">The gift-giving day: <%= giftDate.toLocaleDateString() %></li>
                            <li class="list-group-item">Participants now: <%= count %></li>
                            <% if (priceCap) { %>
                            <li class="list-group-item">The price cap set for this exchange: <%= priceCap %></li>
                            <% } %>
                        </ul>
                        <div class="card-footer">
                            <form class="form-signin" method="post" action="/join">
                                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Join</button>
                            </form>
                        </div>

                    </div>
                </div>

                <% } %>
            </div>
        </div>
    </div>
</div>
